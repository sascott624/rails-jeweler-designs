<%= render 'welcome/greet' %>

<h2><%= link_to "View All Designs", designs_path %></h2>
<ul>
  <% @designs.each do |design| %>
  <li><%= design.model %> - <%= design.metal %> - <%= design.stone.name %>, <%= design.stone.weight %> ct</li>
  <% end %>
</ul>


<h2><%= link_to "View All Stones", stones_path %></h2>
<ul>
  <% @stones.each do |stone| %>
  <li><%= stone.name %> - <%= stone.cost %></li>
  <% end %>
</ul>

<h2><%= link_to "View All Users", users_path %></h2>
<ul>
  <% @users.each do |user| %>
  <li><%= user.email %></li>
  <% end %>
</ul>
